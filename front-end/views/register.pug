doctype html
.form-container
  .form-top
  .form-inner-container
    .register-text Register
    .register-instructions-text Enter your email and password
    form.register-form(action="" method="post")
      input(type="email" name="email" value="email" placeholder="YourEmail@Domain.com")
      input(type="text" name="firstName" value="firstName" placeholder="Enter your first name here (required)")
      input(type="text" name="lastName" value="lastName" placeholder="Enter your last name here (required)")
      input(type="password" name="password" value="password" placeholder="Enter password")
      input(type="password" name="confirmPassword" value="confirmPassword" placeholder="re-enter password")
      button(type="submit") Register
